alias a='ad && make'
alias ad='cd $(ap)' # Change to alias repo directory
alias ae='nano "$(af)"'
alias aeu='ae && asort && au'
alias af='echo "$(ap)/aliases"'
alias ap='pkgmgr path alias'
alias arca='arc -qx -- .'
alias alist="(a list)"
alias asearch='f(){ a search q="$1"; }; f'
alias asort="(a sort)"
alias au='(a update) && source ~/.config/shell/aliases'
alias dcd='dc down'
alias dc='docker compose'
alias d='docker'
alias gaa='ga --all'
alias ga="g add"
alias gc="g commit"
alias gcp="gc && gp"
alias g="git"
alias gpull="g pull"
alias gpush="g push"
alias gxa='gaa && gxd'
alias gxd='gxds | xclipc && gxds'
alias gxds='g diff --staged'
alias hw='echo hello world'
alias mi='m install'
alias m='make'
alias xclipc='xclip -selection clipboard'
