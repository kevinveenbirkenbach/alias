
alias 0='clear' # clear screen
alias a='acd && m' # Call alias 'make'
alias acd='cd $(apath)' # Change to alias repo directory
alias ac='pc alias' # Edit aliases
alias ada='(acd && giaa && gico -m "Autocommit" && gipu)' # add, commit, and push alias
alias aedit='nano "$(afile)"' # Edit aliases file
alias aeditu='aedit && aus'
alias aexport='f(){ (a export a="$1";) }; f'
alias afact='(acd && m refactor)' # Refactors aliases
alias afile='e "$(apath)/aliases"'
alias alist="(a list)"
alias anewa='anew && ada' # Autopublishing of command
alias anew='(acd && m add && aus)' # Add new alias
alias apath='p path alias'
alias arci='arcix .'
alias arcix='arc -qxI .md LICENSE --' # Copys all files into clippboard except .md
alias arcx='arc -qx --'
alias arename='f(){ (a rename old="$1" new="$2" && asort) }; f'
alias asearch='f(){ (a search q="$1"); }; f'
alias asort="(a sort)"
alias au='(a update) && source ~/.config/shell/aliases'
alias aus='asort && au' # Sort and update aliases
alias auspu='(aus && ada)' # update, add, commit, and push alias
alias bsra='f(){ command bsr -fPrcvn "$3" "$1" -- "$2"; }; f' # Executes bulk string replace: $1=search dir, $2=search string, $3=replace string
alias c='code' # Execute code
alias dbuild='f(){ docker build -t "$1" .; }; f' # Build local Dockerfile $1 => image name
alias dc='d compose'
alias dcdown='dc down'
alias dcdownv='dcdown -v'
alias dclean="dstopa && drmall && drmvolall"
alias d='docker'
alias dpurge='dclean && dsystemprune' # Deletes everything docker related
alias drmall='d rm -f $(docker ps -aq) 2>/dev/null' # Deletes all docker containers
alias drmvolall='d volume rm $(docker volume ls -q) 2>/dev/null' # Removes all docker volumes
alias drun='docker run --rm' #Runs image
alias dstopa='d stop $(docker ps -aq) 2>/dev/null' # Stopps all docker containers
alias dsystemprune='d system prune -a --volumes -f' # Prunes everything docker related on the system
alias e='echo' # echo
alias gi0='gi clean -fdX .' # Executes 'git clean -fdX .' and deletes all untracked files
alias giaa='gia --all' # git add --all
alias giaax='giaa && gidisx'
alias gia="gi add"
alias giau="giaa && giup" # git add --all, commit and push
alias giclo='gi clone' # Executes 'git clone'
alias gico="gi commit"
alias gid="gi diff"
alias gidic='f(){ gid "$1"..HEAD | tee >(xc >/dev/null) | less; }; f' # All changes accumulated since commit
alias gidil='gidic $(gilata)' # Changes since last tag
alias gidis='gid --staged'
alias gidisx='gidis | xc && gidis'
alias gi="git"
alias gilata='git describe --tags --abbrev=0' # Latest git tag
alias gil='gi log' # Show git logs
alias giout='gi checkout' # Executes 'git checkout'
alias gipd="gi pull"
alias gipu="gi push"
alias girh='gi reset HEAD' # Resets git head
alias gis='gi status' # Git status
alias giup="gico && gipu"
alias mi='m install'
alias m='make'
alias n='nautilus ${1:-}'
alias pcd='f(){ cd "$(pkgmgr path "$1")"; }; f' # Change directory to packagemanager package
alias pcoin='p config init' # Executes 'pkgmgr config init'
alias pc='p code' # Opens pkgmgr code
alias pe='p explore' # Opens GNOME for pkgmgr package
alias p='pkgmgr' # Executes pkgmgr
alias prma='pr major'
alias prmi='pr minor'
alias prpa='pr patch'
alias pr='p release'
alias te2e0='0 && te2e'
alias te2e0l='tlog te2e0'
alias te2e='m test-e2e' # Execute integration tests
alias tindac0="0 && tindac" # Tindac with clear screen
alias tindac='e "Cleanup:" && dclean; e "Deploy:" && tind' # Clean Infinito.Nexus testdeploy to Arch with act
alias tind="act -W .github/workflows/test-deploy-server.yml -j test-deploy-server --matrix distro:arch --privileged --network host --concurrent-jobs 1"
alias tint='m test-integration' # Execute integration test
alias tlog='f(){ local cmd="${aliases[$1]:-$1}"; eval "$cmd" 2>&1 | tee "${2:-$HOME/log.txt}"; }; f' # Usage: tlog <alias-or-cmd> [logfile]
alias tunit='m test-unit' # make test-unit
alias xc='xclip -selection clipboard'
alias zc='zc(){ local z="${1:-/tmp/packed.zip}"; [ -e "$z" ] && { printf "Overwrite %s (Enter=ok, Ctrl+C=abort) " "$z"; read _; }; rm -f "$z" && zip -vr "$z" *; }; zc' # ZIP current without hidden files
alias z="zip"
