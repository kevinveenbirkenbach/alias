alias a='ad && make' # Call alias 'make'
alias adc='(ad && m add && asu)' # Add new alias
alias ad='cd $(ap)' # Change to alias repo directory
alias ae='nano "$(af)"' # Edit aliases file
alias arename='f(){ a rename old="$1" new="$2"; }; f'
alias aeu='ae && asort && au'
alias af='echo "$(ap)/aliases"'
alias alist="(a list)"
alias ap='pkgmgr path alias'
alias arca='arc -qx -- .'
alias asearch='f(){ a search q="$1"; }; f'
alias asort="(a sort)"
alias asu='asort && au' # Sort and update aliases
alias au='(a update) && source ~/.config/shell/aliases'
alias dcd='dc down'
alias dc='docker compose'
alias d='docker'
alias gaa='ga --all'
alias ga="g add"
alias gc="g commit"
alias gcp="gc && gpush"
alias g="git"
alias gpull="g pull"
alias gpush="g push"
alias gxa='gaa && gxd'
alias gxd='gxds | xclipc && gxds'
alias gxds='g diff --staged'
alias hw1234='helloworld123456 && echo hello world 2 && helloworld123456'
alias helloworld123456='echo hello world'
alias mi='m install'
alias m='make'
alias xclipc='xclip -selection clipboard'
