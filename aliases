
alias a='acd && m' # Call alias 'make'
alias acd='cd $(apath)' # Change to alias repo directory
alias aedit='nano "$(afile)"' # Edit aliases file
alias aeditu='aedit && asupdate'
alias aexport='f(){ a export a="$1"; }; f'
alias aacp='(acd && giaa && gico -m "Autocommit" && gipush)' # add, commit and push alias
alias afile='e "$(apath)/aliases"'
alias alist="(a list)"
alias anewa='anew && alias aacp' # Autopublishing of command
alias anew='(acd && m add && asupdate)' # Add new alias
alias apath='p path alias'
alias arca='arcqx .'
alias arcqx='arc -qx --'
alias arefactor='acd && m refactor' # Refactors aliases
alias arename='f(){ a rename old="$1" new="$2" && asort }; f'
alias asearch='f(){ a search q="$1"; }; f'
alias asort="(a sort)"
alias asupdate='asort && au' # Sort and update aliases
alias au='(a update) && source ~/.config/shell/aliases'
alias bsrfc='f(){ command bsr -frcvn "$3" "$1" -- "$2"; }; f' # Executes bulk string replace: $1=search dir, $2=search string, $3=replace string
alias c='code' # Execute code
alias dc='d compose'
alias dcdown='dc down'
alias dcdownv='dcdown -v'
alias dclean="dstopa && drmall && drmvolall"
alias d='docker'
alias dpurge='dclean && dsystemprune' # Deletes everything docker related
alias drmall='d rm -f $(docker ps -aq) 2>/dev/null' # Deletes all docker containers
alias drmvolall='d volume rm $(docker volume ls -q) 2>/dev/null' # Removes all docker volumes
alias dstopa='d stop $(docker ps -aq) 2>/dev/null' # Stopps all docker containers
alias dsystemprune='d system prune -a --volumes -f' # Prunes everything docker related on the system
alias e='echo' # echo
alias giaa='gia --all' # git add --all
alias gia="gi add"
alias gicopu="gico && gipush"
alias gi="git"
alias gico="gi commit"
alias giout='gi checkout' # Executes 'git checkout'
alias girehd='gi reset HEAD' # Resets git head
alias gits='gi status' # Git status
alias gipull="gi pull"
alias gipush="gi push"
alias giaax='giaa && gidisx'
alias gidisx='gidis | xclipc && gidis'
alias gidis='gi diff --staged'
alias mi='m install'
alias m='make'
alias te2e='m test-e2e' # Execute integration tests
alias tint='m test-integration' # Execute integration test
alias tunit='m test-unit' # make test-unit
alias pcd='f(){ cd "$(pkgmgr path "$1")"; }; f' # Change directory to packagemanager package
alias pc='p code' # Opens pkgmgr code
alias p='pkgmgr' # Executes pkgmgr
alias tind="act -j test-deploy-server --matrix distro:arch --privileged --network host --concurrent-jobs 1"
alias tindac='e "Cleanup:" && dclean; e "Deploy:" && tind' # Clean Infinito.Nexus testdeploy to Arch with act
alias xclipc='xclip -selection clipboard'
