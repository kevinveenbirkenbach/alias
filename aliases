alias a='acd && m' # Call alias 'make'
alias acd='cd $(apath)' # Change to alias repo directory
alias aeditu='aedit && asort && au'
alias aedit='nano "$(afile)"' # Edit aliases file
alias aexport='f(){ a export a="$1"; }; f'
alias afile='echo "$(apath)/aliases"'
alias alist="(a list)"
alias anew='(acd && m add && asu)' # Add new alias
alias apath='pkgmgr path alias'
alias arca='arc -qx -- .'
alias arename='f(){ a rename old="$1" new="$2" && asort }; f'
alias asearch='f(){ a search q="$1"; }; f'
alias asort="(a sort)"
alias asu='asort && au' # Sort and update aliases
alias au='(a update) && source ~/.config/shell/aliases'
alias dcd='dc down'
alias dc='docker compose'
alias d='docker'
alias gaa='ga --all'
alias ga="g add"
alias gc="g commit"
alias gcp="gc && gpush"
alias g="git"
alias gpull="g pull"
alias gpush="g push"
alias gxa='gaa && gxd'
alias gxd='gxds | xclipc && gxds'
alias gxds='g diff --staged'
alias mi='m install'
alias m='make'
alias xclipc='xclip -selection clipboard'
