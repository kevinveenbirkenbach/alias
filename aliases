alias ad='cd $(ap)' # Change to alias repo directory
alias ae='nano "$(af)"'
alias aeu='ae && as && au'
alias af='echo "$(ap)/aliases"'
alias ap='pkgmgr path alias'
alias arca='arc -qx -- .'
alias as="(ad && make sort)"
alias au='(ad && make update) && source ~/.config/shell/aliases'
alias gaa='ga --all'
alias g="git"
alias ga="g add"
alias gc="g commit"
alias gp="g push"
alias gcp="gc && gp"
alias gxa='gaa && alias gxc'
alias gxd='gxds | xclipc && gxds'
alias gxds='g diff --staged'
alias hw='echo hello world'
alias xclipc='xclip -selection clipboard'
alias m='make'
alias mi='m install'
alias d='docker'
alias dc='docker compose'
alias dcd='dc down'